<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<%= button_to "Create Pokemon!", new_path(id: @trainer.id), :class => "button medium", :method => :get if @trainer == current_trainer %>
<% @pokemons.each do |pokemon| %>
  <% if pokemon.health > 0 %>
    <p> Name: <%= pokemon.name %> </p>
    <p>
    Level: <%= pokemon.level %>
    Health: <%= pokemon.health %>
    </p>
    <%= button_to "Damage!", damage_path(id: pokemon.id), :class => "button medium", :method => :patch %>
  <% end %>
  <%= button_to "Heal!", heal_path(id: pokemon.id), :class => "button medium", :method => :patch %>
<% end %>
